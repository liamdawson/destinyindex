{
  "name": "destiny-index",
  "version": "1.0.0",
  "repository": "https://github.com/liamdawson/destinyindex.git",
  "author": "Liam Dawson <liam@ldaws.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "build": "npm-run-all build:*",
    "build:templates": "node index.js",
    "build:css": "copy *.css build",
    "dev": "npm-run-all -rp dev:*",
    "dev:serve": "live-server --no-browser --entry-file=index.html build/",
    "dev:watch": "nodemon -x npm run build"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.0",
    "handlebars": "^4.0.12",
    "copy": "^0.3.2"
  },
  "devDependencies": {
    "live-server": "^1.2.0",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3"
  },
  "nodemon": {
    "verbose": false,
    "ignore": [
      ".git",
      "node_modules",
      "build"
    ],
    "watch": [
      "."
    ],
    "ext": "toml,js,css,html,json"
  }
}
